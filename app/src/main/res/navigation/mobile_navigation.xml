<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_my_home">

    <fragment
        android:id="@+id/nav_my_home"
        android:name="com.example.mymall.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_my_order"
        android:name="com.example.mymall.ui.order.OrderFragment"
        tools:layout="@layout/fragment_order"/>

    <fragment
        android:id="@+id/nav_my_rewards"
        android:name="com.example.mymall.ui.rewards.RewardsFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_rewards" />

    <fragment
        android:id="@+id/nav_my_cart"
        android:name="com.example.mymall.ui.cart.CartFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_cart" />

    <fragment
        android:id="@+id/nav_my_wishlist"
        android:name="com.example.mymall.ui.wishlist.WishlistFragment"
        android:label="@string/menu_tools"
        tools:layout="@layout/fragment_wishlist" />

    <fragment
        android:id="@+id/nav_my_account"
