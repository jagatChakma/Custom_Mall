<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="250dp"
                android:background="@color/colorPrimary"
                android:layout_gravity="center"
                android:layout_margin="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textSize="22sp"
                android:textColor="#388E3C"
                android:layout_gravity="center"
                android:padding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't warry wo just need your registered email address and its done!"
                android:textSize="18sp"
                android:textColor="#7B1FA2"
                android:textStyle="normal"
                android:layout_gravity="center"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email id"
                android:textSize="18sp"
                android:textStyle="normal"
                android:layout_gravity="left"
                android:paddingLeft="10dp"
                android:layout_marginTop="50dp"/>

            <EditText
                android:id="@+id/forgotPassEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="yourmail@mail.com"
                android:textSize="22sp"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                android:theme="@style/greenProgressbar"/>

            <LinearLayout
                android:id="@+id/forgot_email_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp">
                <ImageView
                    android:id="@+id/forgot_email_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/mail"
                    android:layout_gravity="center"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/forgot_pass_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recovery email sent successfully! Check your inbox."
                    android:layout_marginLeft="10dp"
                    android:textColor="#388E3C"
                    android:visibility="gone"/>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/forgot_pass_progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:theme="@style/greenProgressbar"
                android:layout_marginBottom="20dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/resetEmailButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset Password"
                android:textColor="#388E3C"
                android:textSize="22sp"
                android:padding="15dp"
                android:enabled="false"/>

            <TextView
                android:id="@+id/backToLogIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="&lt;&lt; Go back"
                android:textSize="22sp"
                android:textColor="#7B1FA2"
                android:layout_gravity="center"
                android:padding="10dp"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>