<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/skipSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip this section? GO"
                android:textSize="18sp"
                android:padding="10dp"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/email_hading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="18sp"
                android:layout_below="@+id/skipSection"/>

            <EditText
                android:id="@+id/user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="yourmail@mail.com"
                android:layout_below="@+id/email_hading"
                android:inputType="textEmailAddress"
                android:textSize="22sp"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/password_hading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password"
                android:layout_below="@+id/user_email"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/user_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="********"
                android:layout_below="@+id/password_hading"
                android:textSize="22sp"
                android:padding="10dp"
                android:inputType="textPassword"/>

            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:layout_below="@+id/user_password"
                android:padding="10dp"
                android:layout_alignParentEnd="true"/>

            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Log In"
                android:layout_below="@+id/forgot_password"
                android:textSize="22sp"
                android:padding="15dp"
                android:layout_marginTop="100dp"
                android:enabled="false"/>

            <TextView
                android:id="@+id/option_or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Or"
                android:layout_below="@+id/login_button"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/signup_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have account? Sign Up!"
                android:layout_below="@+id/option_or"
                android:layout_centerHorizontal="true"
                android:textSize="22sp"
                android:padding="10dp"/>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>